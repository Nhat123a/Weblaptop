@model IEnumerable<Shopthoitrang.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<p>
    <a asp-action="Create" class="btn btn-success m-r-5">Thêm sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID 
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Giá
            </th>
            <th>
               Trạng Thái
            </th>
            <th>
                Danh mục
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Ảnh
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @item.ProductId
                </td>
            <td>
                    @item.ProductName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price.ToString("N0")đ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                    <img src="@Url.Content("~/images/product-details/"+item.Image)" width="120" alt="" />
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-secondary btn-tone m-r-5">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-tone m-r-5">Xem</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-tone m-r-5">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
