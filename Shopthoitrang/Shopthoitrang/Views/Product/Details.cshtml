<div class="row">
	<div class="col-sm-3">
		@Html.Partial("_Slidebar")
	</div>

	<div class="col-sm-9 padding-right">
		<div class="product-details">
			<!--product-details-->
			<div class="col-sm-5">
				<div class="view-product">
					<img src="@Url.Content("~/images/products/"+Model.Image)" alt="" />
				</div>

			</div>
			<div class="col-sm-7">
				<div class="product-information">
					<!--/product-information-->
					<h2>@Model.ProductName</h2>
					<p>Thương hiệu: @Model.Brand.BrandName</p>
					<span>
						<span>@Model.Price.ToString("N0")đ</span>
						<button type="button" class="btn btn-fefault cart">
							<i class="fa fa-shopping-cart"></i>
							<a asp-controller="Cart" asp-action="Addcart" asp-route-id="@Model.ProductId">Add to cart</a>
						</button>
					</span>
					<p><b>Tình trạng :</b> New</p>
				</div><!--/product-information-->
			</div>
		</div><!--/product-details-->

		<div class="category-tab shop-details-tab">
			<!--category-tab-->
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li class ="active"><a href="#details" data-toggle="tab">Thông số sản phẩm</a></li>
					<li ><a href="#reviews" data-toggle="tab">Đánh giá (5)</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane fade active in" id="details">
					@Html.Raw(@Model.Description);
				</div>


				<div class="tab-pane fade " id="reviews">
					<div class="col-sm-12">
						<p><b>Khách hàng chấm điểm, đánh giá, nhận xét</b></p>

						<form action="#">
							<span>
								<input type="text" placeholder="Nhập tên của bạn" />
								<input type="email" placeholder="Nhập địa chỉ email" />
							</span>
							<textarea name=""></textarea>
							<b>Đánh giá </b>
							<button type="button" class="btn btn-default pull-right">
								Gửi bình luận
							</button>
						</form>
					</div>
				</div>

			</div>
		</div><!--/category-tab-->
		@{
			var list = ViewBag.lienquan as List<Shopthoitrang.Models.ProductModel>;
		}
		<div class="recommended_items">
			<!--recommended_items-->
			<h2 class="title text-center">Laptop tương tự</h2>

			<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					<div class="item active">
						@foreach(var item in list)
						{
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
											<a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId">
												<img src="@Url.Content("~/images/products/"+item.Image)" alt="" />
												<h2>@item.Price.ToString("N0")đ</h2>
												<p>@item.ProductName<p>
											</a>
											<button type="button" class="btn btn-default add-to-cart"><a asp-controller="Cart" asp-action="Addcart" asp-route-id="@item.ProductId"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a></button>
										</div>
									</div>
								</div>
							</div>
						}

					</div>
				</div>
				<a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
					<i class="fa fa-angle-left"></i>
				</a>
				<a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
					<i class="fa fa-angle-right"></i>
				</a>
			</div>
		</div><!--/recommended_items-->

	</div>
</div>